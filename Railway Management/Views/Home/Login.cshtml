@{
    ViewBag.Title = "User Login";
}
<div align="center" id="status">
    <h1 style="background-color:blanchedalmond">@TempData["success"]</h1>
</div>
<h2>User Login</h2>

<form id="loginForm" method="post" action="@Url.Action("Login", "Customers")" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" required placeholder="Enter your email">
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" required placeholder="Enter your password">
    </div><hr />
    <button type="submit" class="btn btn-success btn-group-lg btn-primary">Login</button>
</form>

<p>Don't have an account? <a asp-action="Signup">Sign up here</a>.</p>
<script>
     // Function to hide the status div after 5 seconds (5000 milliseconds)
    setTimeout(function() {
        document.getElementById('status').style.display = 'none';
    }, 5000); // 5000 milliseconds = 5 seconds
</script>